{% set template = form.get('template') %}
{% set msg = formElementErrors(template, { class: 'help-block' }) %}

<div class="box-body">
    <div class="form-group">
        {{ formRow(form.get('name')) }}
    </div>
    <div class="form-group">
        {{ formRow(form.get('tags')) }}
    </div>
    <div class="form-group {{ msg ? 'has-error' }}">
        {{ formLabel(template) }}
        {{ formElement(template) }}
        {{ msg | raw }}
    </div>
</div>
