{% extends '@layout/default.html.twig' %}

{% block page_header %}Listagem de Contatos{% endblock %}

{% block title %}{{ block("page_header") }} | {{ parent() }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-app" href="{{ url("customer.create") }}">
                    <i class="fa fa-plus-circle"></i> Novo
                </a>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th width="10">#</th>
                            <th>Nome</th>
                            <th>Email</th>
                        </tr>
                        {% for customer in customers %}
                            <tr>
                                <th>{{ customer.id }}</th>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.email }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}