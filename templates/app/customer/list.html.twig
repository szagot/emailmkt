{% extends '@layout/default.html.twig' %}

{% block page_header %}Listagem de Contatos{% endblock %}

{% block title %}{{ block("page_header") }} | {{ parent() }}{% endblock %}

{% block content %}

    <div class="row">
        <div class="box">
            <div class="box-header">
                <a class="btn btn-app" href="{{ url("customer.create") }}">
                    <i class="fa fa-plus-circle"></i> Novo
                </a>
            </div>
            <div class="box-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th width="50" class="text-center">
                                <a href="
                                    {% if (order.type == "asc" and order.field == 'id') or order.field is null %}
                                        {{ url("customers.list", {order: "id", type: "desc"}) }}">
                                        {% if order.field == 'id' or order.field is null %}
                                            <i class="fa fa-sort-numeric-asc text-gray"></i>
                                        {% endif %}
                                    {% else %}
                                        {{ url("customers.list", {order: "id", type: "asc"}) }}">
                                        {% if order.field == 'id' %}
                                            <i class="fa fa-sort-numeric-desc text-gray"></i>
                                        {% endif %}
                                    {% endif %}
                                    #</a>
                            </th>
                            <th>
                                <a href="
                                    {% if order.type != "desc" and order.field == 'name' %}
                                        {{ url("customers.list", {order: "name", type: "desc"}) }}">
                                        {% if order.field == 'name' %}
                                            <i class="fa fa-sort-alpha-asc text-gray"></i>
                                        {% endif %}
                                    {% else %}
                                        {{ url("customers.list", {order: "name", type: "asc"}) }}">
                                        {% if order.field == 'name' %}
                                            <i class="fa fa-sort-alpha-desc text-gray"></i>
                                        {% endif %}
                                    {% endif %}
                                    Nome</a>
                            </th>
                            <th>
                                <a href="
                                    {% if order.type != "desc" and order.field == 'email' %}
                                        {{ url("customers.list", {order: "email", type: "desc"}) }}">
                                        {% if order.field == 'email' %}
                                            <i class="fa fa-sort-alpha-asc text-gray"></i>
                                        {% endif %}
                                    {% else %}
                                        {{ url("customers.list", {order: "email", type: "asc"}) }}">
                                        {% if order.field == 'email' %}
                                            <i class="fa fa-sort-alpha-desc text-gray"></i>
                                        {% endif %}
                                    {% endif %}
                                    Email</a>
                            </th>
                            <th width="150" class="text-center">Ações</th>
                        </tr>
                        {% for customer in customers %}
                            <tr>
                                <th class="text-center">
                                    <a href="{{ url('customer.update', {id: customer.id}) }}">
                                        {{ customer.id }}
                                    </a>
                                </th>
                                <td>{{ customer.name }}</td>
                                <td>{{ customer.email }}</td>
                                <td class="text-center">
                                    <a class="btn btn-primary btn-xs"
                                       href="{{ url('customer.update', {id: customer.id}) }}">
                                        <i class="fa fa-edit"></i> Editar
                                    </a>
                                    <a class="btn btn-danger btn-xs"
                                       href="{{ url('customer.delete', {id: customer.id}) }}">
                                        <i class="fa fa-trash-o"></i> Deletar
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}