{% extends '@layout/default.html.twig' %}

{% block page_header %}Novo Contato{% endblock %}

{% block title %}{{ block("page_header") }} | {{ parent() }}{% endblock %}

{% block content %}
    {% set name = form.get('name') %}
    {% do name.setAttribute('class', 'form-control') %}

    {% set email = form.get('email') %}
    {% do email.setAttribute('class', 'form-control') %}

    {% set submit = form.get('submit') %}
    {% do submit.setAttribute('class', 'btn btn-primary').setLabel('<i class="fa fa-check"></i> Cadastrar') %}

    {% do form.setAttribute('action', url('customer.create')) %}
    {% do form.prepare() %}

    <div class="row">
        <div class="col-md-7">
            <div class="box box-primary">

                {{ form().openTag(form) | raw }}

                <div class="box-body">
                    <div class="form-group">
                        {{ formRow(name) }}
                    </div>
                    <div class="form-group">
                        {{ formRow(email) }}
                    </div>
                </div>
                <div class="box-footer">
                    {{ formButton(submit) }}
                    <a class="btn btn-default" href="{{ url("customers.list") }}"><i class="fa fa-ban text-danger"></i>
                        Cancelar</a>
                </div>

                {{ form().closeTag() | raw }}

